<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>Db.UserLoginInfoModel</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:derby://localhost:1527/blooddonation_vt;create=true"/>
            <property name="eclipselink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="eclipselink.jdbc.user" value="blooddonation"/>
            <property name="eclipselink.jdbc.passwordhash" value="blooddonation"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
